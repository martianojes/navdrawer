<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/thumbnaildetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#11ffff"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_margin="10dp"
        >
    <ImageView
        android:layout_width="185dp"
        android:layout_height="185dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/photo" />
    </LinearLayout>

    <TextView
        android:text="222$"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#dd77dd"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pricedetails"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/thumbnaildetails"/>

    <TextView
        android:text="@string/typeActivity"

        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/thumbnaildetails"
        android:layout_below="@id/pricedetails"
        android:id="@+id/typeActivitydetails" />

    <TextView
        android:text="France"
        android:autoLink="map"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/countrydetails"
        android:layout_toRightOf="@id/thumbnaildetails"
        android:layout_below="@id/typeActivitydetails"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/thumbnaildetails"
        android:id="@+id/linearDate"
        >
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearDateStart"
        android:layout_margin="3dp"
        >
    <TextView
        android:text="Date of Start"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateStart" />

    <TextView
        android:autoLink="email"
        android:text="11/11/2011"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateStart" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearDateEnd"
        android:orientation="vertical"
        android:layout_margin="3dp"
        >
    <TextView
        android:text="Date of End"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateEnd" />

        <TextView
            android:autoLink="web"
            android:text="11/11/2011"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateEnd"
        />
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="Details"
        android:autoLink="phone"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearDate"
        android:id="@+id/details" />
</RelativeLayout>